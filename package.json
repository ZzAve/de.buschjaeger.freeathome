{
  "name": "de.buschjaeger.freeathome",
  "version": "0.0.1",
  "description": "Adds support for Busch Jaeger's Free@home system and its connected devices to Homey",
  "main": "app.js",
  "dependencies": {
    "fs-extra": "^8.1.0",
    "node-fetch": "^2.6.0",
    "promise.prototype.finally": "^3.1.1",
    "freeathome-api": "github:zzave/freeathome-api#feature/error-handling",
    "semver": "^6.3.0"
  },
  "devDependencies": {
    "@types/prop-types": "^15.7.3",
    "athom-cli": "^2.1.104",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "prop-types": "latest",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "scripts": {
    "prehomey2": "npm run build && sh prepare.sh && cd dist && npm ci --production && cd ../",
    "prehomey": "npm run build && sh prepare.sh && cd dist && npm i --production && cd ../",
    "build": "tsc",
    "yolo": "athom app run -p dist",
    "homey:run": "npm run prehomey && athom app run -p dist ",
    "homey:install": "npm run prehomey && athom app install -p dist ",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZzAve/de.buschjaeger.freeathome.git"
  },
  "author": "Julius van Dis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ZzAve/de.buschjaeger.freeathome/issues"
  },
  "homepage": "https://github.com/ZzAve/de.buschjaeger.freeathome#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
